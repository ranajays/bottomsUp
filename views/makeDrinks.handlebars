    <script type="text/javascript">
    	// $('#nameSortList').hide();
    	if (location.search.length == 0) {
    		$(".btn").first().button("toggle");
    	}
    	else {
    		numString = location.search.substring(location.search.length - 1);
			additionalPlus = parseInt(numString)+1;
			$(".btn:nth-child("+additionalPlus+")").first().button("toggle");
    	}
    	$('#priceSwitch').on('switch-change', function (e, data) {
    	  	var $element = $(data.el);
    	  	// console.log(e, $element, value);
    	  	if($element.parent().hasClass('switch-on')){
    	  		$('#priceSortList').show();
    	  		$('#nameSortList').hide();
    	  	}
    	  	else {
    	  		$('#priceSortList').hide();
    	  		$('#nameSortList').show();
    	  	}
    	});
    	$(".btn").click(function () {
    		$(".btn").removeClass('active');
    		$(this).button("toggle");
    	})
    </script>

